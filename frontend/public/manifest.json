{
  "manifest_version": 3,
  "name": "Next.js Chrome Extension",
  "version": "1.0",
  "description": "Une extension Chrome int√©grant un projet Next.js.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:3001/*"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}